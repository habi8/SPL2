<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Newsfeed</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: system-ui;
        }

        body {
            display: flex;
            height: 100vh;
            background-color: white;
        }

        /* Left Sidebar - People Section */
        .left-sidebar {
            width: 20%;
            background: #CCCCFF;
            padding: 15px;
            margin:15px;
            overflow-y: auto;
            border-right: 1px solid #ddd;
            border-radius: 10px;
            
        }

        .header{
            display: flex;
            align-items: flex-start;
        }
        .header img{
            align-items: center;
            justify-content: center;
            height: 35px;
            width: 35px;
            margin-bottom: 15px;
            margin-top: 25px;
            margin-left: 20px;
            
        }

        .header h3{
            margin-top: 30px;
            margin-left: 5px;
        }

        .user-item {
    display: flex;
    align-items: center; /* Aligns profile picture and user details horizontally */
    margin-bottom: 15px;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 15px;
    background-color: #f9f9f9;
    width: 300px; /* Adjust as needed */
}

.user-pic {
    width: 60px;
    height: 60px;
    border-radius: 60%; /* Round the profile picture */
    margin-right: 10px; /* Space between image and details */
}

.user-details {
    display: flex;
    flex-direction: column; /* Stack username and button vertically */
    justify-content: center;
}

.user-name {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 5px;
    margin-left: 5px; /* Space between username and button */
}

.addFriend {
    background-color: lightblue; /* Light blue button */
    border: none;
    width: 110px;
    padding: 8px 15px;
    border-radius: 20px; /* Rounded corners */
    cursor: pointer;
    transition: background-color 0.3s;
    font-weight: bold;
}

.addFriend:hover {
    background-color: #8ecae6; /* Darker blue on hover */
}

        .people {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .people img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .add-friend {
            background: #1877f2;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Middle Section - Newsfeed */
        .newsfeed {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            margin:5px;
            margin-top: 10px;
            margin-bottom: 10px;
            background: #CCCCFF;
            border-radius: 8px;
            
        }

        .newsfeed img{
            align-items: center;
            justify-content: center;
            height: 35px;
            width: 35px;
            margin-bottom: 15px;
            margin-top: 25px;
            margin-left: 500px;
            
        }

        .newsfeed img:hover{
            cursor: pointer;
        }

        .post {
            background: white;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .post-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .post-header img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .post-content {
            font-size: 14px;
        }

        /* Right Sidebar - Profile & Logout */
        .right-sidebar {
            width: 20%;
            padding: 15px;
            background: #CCCCFF;
            border-left: 1px solid #ddd;
            margin:15px;
            text-align: center;
            border-radius: 8px;
        }

        .profile {
            cursor: pointer;
            background: white;
            padding: 10px;
            margin-right: 15px;
            margin-left: 15px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            
        }

        .profile img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile  :hover{
            cursor: pointer;
            transform: scale(1.4); 
        }

        .icons{
            display: flex;
            margin: 20px;
            justify-content: space-evenly;
        }

        .icons img{
            height: 35px;
            width: 35px;
        }
        .icons img:hover{
            cursor: pointer;
            transform: scale(1.4); 
        }
        

        .logout {
            margin-top: 20px;
            background: #ff4b5c;
            color: white;
            border: none;
            padding: 10px 15px;
            margin-right: 40px;
            
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Left Sidebar - People Section -->
    <div class="left-sidebar">
        <div class="header">
            <img src="/newsfeed/handshake.png" alt="Handshake">
        <h3>People</h3>
        </div>
        
        <div id="people-list">
            <% users.forEach(user => { %>
                <div class="user-item">
                    <img src="<%= user.profilePic || '/default-profile.png' %>" alt="<%= user.userName %>'s profile" class="user-pic">
                    <div class="user-details">
                        <span class="user-name"><%= user.userName %></span>
                        <button class="addFriend">Add friend</button>
                    </div>
                </div>
                
            <% }); %>
        </div>
    </div>
    

    <!-- Middle Section - Newsfeed -->
    <div class="newsfeed" id="newsfeed">
        <img src="/newsfeed/newspaper.png">
        <div id="post-container"></div>
    </div>

    <!-- Right Sidebar - Profile & Logout -->
    <div class="right-sidebar">
        <div class="profile" id="profile">
            <img src="<%= profilePic%>"alt="Profile picture">
            <span><b><%=userName%></b>
            
            </span>
        </div>
        <div class="icons">
            <img id="notifications" src="/newsfeed/bell.png">
            <img id="messages" src="/newsfeed/message.png">
        </div>
        <button class="logout" id="logout">Logout</button>
    </div>

    <script>

        // Profile Click Event
        document.getElementById("profile").addEventListener("click", async function() {
    try {
        const response = await fetch("/profile"); // Send GET request to backend
        if (response.ok) {
            window.location.href = "/profile"; // Redirect to the profile page
        } else {
            alert("Failed to load profile");
        }
    } catch (error) {
        console.error("Error fetching profile:", error);
        alert("Something went wrong!");
    }
});

        // Logout Button Click Event
        document.getElementById("logout").addEventListener("click",async function() {
            try {
                
        const response = await fetch("/login"); // Send GET request to backend
        if (response.ok) {
            window.location.href = "/login";
            session.destroy(); // Redirect to the profile page
        } else {
            alert("Failed to log out");
        }
    } catch (error) {
        console.error("Error logging out:", error);
        alert("Something went wrong!");
    }
        });
    </script>
</body>
</html>
