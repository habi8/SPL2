<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Newsfeed</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: system-ui;
        }

        body {
            display: flex;
            height: 100vh;
            background-color: white;
        }

        /* Left Sidebar - People Section */
        .left-sidebar {
            width: 20%;
            background: #CCCCFF;
            padding: 15px;
            margin:15px;
            overflow-y: auto;
            border-right: 1px solid #ddd;
            border-radius: 10px;
            
        }

        .header{
            display: flex;
            align-items: flex-start;
        }
        .header img{
            align-items: center;
            justify-content: center;
            height: 35px;
            width: 35px;
            margin-bottom: 15px;
            margin-top: 25px;
            margin-left: 20px;
            
        }

        .header h3{
            margin-top: 30px;
            margin-left: 5px;
        }

        .user-item{
            display:flex;
            margin: 15px;
            font-style: bold;
        }
        
        .user-item img{
            height: 50px;
            width: 50px;
            border-radius: 50px;
        }

        .user-item span{
            margin-left: 10px;
        }

        .user-item span button{
            background: blue;
        }


        .people {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .people img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .add-friend {
            background: #1877f2;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Middle Section - Newsfeed */
        .newsfeed {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            margin:5px;
            margin-top: 10px;
            margin-bottom: 10px;
            background: #CCCCFF;
            border-radius: 8px;
            
        }

        .newsfeed img{
            align-items: center;
            justify-content: center;
            height: 35px;
            width: 35px;
            margin-bottom: 15px;
            margin-top: 25px;
            margin-left: 500px;
            
        }

        .newsfeed img:hover{
            cursor: pointer;
        }

        .post {
            background: white;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .post-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .post-header img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .post-content {
            font-size: 14px;
        }

        /* Right Sidebar - Profile & Logout */
        .right-sidebar {
            width: 20%;
            padding: 15px;
            background: #CCCCFF;
            border-left: 1px solid #ddd;
            margin:15px;
            text-align: center;
            border-radius: 8px;
        }

        .profile {
            cursor: pointer;
            background: white;
            padding: 10px;
            margin-right: 15px;
            margin-left: 15px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            
        }

        .profile img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .icons{
            display: flex;
            margin: 20px;
            justify-content: space-evenly;
        }

        .icons img{
            height: 35px;
            width: 35px;
        }
        .icons img:hover{
            cursor: pointer;
        }

        .logout {
            margin-top: 20px;
            background: #ff4b5c;
            color: white;
            border: none;
            padding: 10px 15px;
            margin-right: 40px;
            
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Left Sidebar - People Section -->
    <div class="left-sidebar">
        <div class="header">
            <img src="/newsfeed/handshake.png" alt="Handshake">
        <h3>People</h3>
        </div>
        
        <div id="people-list">
            <% users.forEach(user => { %>
                <div class="user-item">
                    <img src="<%= user.profilePic || '/default-profile.png' %>" alt="<%= user.userName %>'s profile" class="user-pic">
                    <span><%= user.userName %></span>
                </div>
            <% }); %>
        </div>
    </div>
    

    <!-- Middle Section - Newsfeed -->
    <div class="newsfeed" id="newsfeed">
        <img src="/newsfeed/newspaper.png">
        <div id="post-container"></div>
    </div>

